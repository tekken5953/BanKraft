<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/jeju_gothic"
        android:text="@string/sign_up"
        android:textColor="@color/purple_700"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sign_up_id_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:text="아이디  : "
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/sign_up_id"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_below="@+id/main_text"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/sign_up_id_tx"
        android:background="@drawable/signup_edit"
        android:gravity="center"
        android:inputType="textNoSuggestions"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/warning_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_id_tx"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="아이디의 길이는 8 ~ 20자로 제한됩니다."
        android:textColor="@android:color/holo_red_light"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/sign_up_name_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/warning_msg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:text="이 름  : "
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/sign_up_name"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@+id/warning_msg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/sign_up_name_tx"
        android:background="@drawable/signup_edit"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sign_up_pwd_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_name_tx"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="10dp"
        android:text="비밀번호  : "
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/sign_up_pwd"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/sign_up_name_tx"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/sign_up_pwd_tx"
        android:background="@drawable/signup_edit"
        android:gravity="center"
        android:inputType="textPassword"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sign_up_repwd_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_pwd_tx"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="10dp"
        android:text="비밀번호 확인  : "
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/sign_up_repwd"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/sign_up_pwd_tx"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/sign_up_repwd_tx"
        android:background="@drawable/signup_edit"
        android:gravity="center"
        android:inputType="textPassword"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_repwd_tx"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sign_up_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/jeju_gothic"
            android:text="@string/ok"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/sign_up_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/jeju_gothic"
            android:text="@string/cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
